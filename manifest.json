{
    "manifest_version": 2,

    "name": "Speed read",
    "description": "Make the current page red",
    "version": "2.0",

    "permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "storage",
        "contextMenus"
    ],

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "web_accessible_resources": ["img/*.png"],

    "options_page": "options.html",

    "browser_action": {
        "default_title": "Make this page red"
    }
}